@page
@model ErrorModel
@{
    ViewData["Title"] = "Oops! Something went wrong";
}

<div class="container py-5 text-center">
    <div class="mb-4">
        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
        <h1 class="display-4 text-danger fw-bold">Something went wrong</h1>
        <p class="lead text-muted">We're sorry, but an unexpected error occurred.</p>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mb-3">
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        </div>
    }

    <div class="alert alert-warning mx-auto" style="max-width: 600px;">
        <h5 class="alert-heading">Development Mode</h5>
        <p>To see detailed error information, switch to the <strong>Development</strong> environment.</p>
        <p class="mb-0"><strong>Note:</strong> Do not enable development mode in production as it may expose sensitive information.</p>
    </div>

    <div class="mt-4">
        <a href="/" class="btn btn-outline-primary me-2">🏠 Go Home</a>
        <a href="mailto:support@example.com" class="btn btn-danger">📧 Contact Support</a>
    </div>
</div>