@page
@model WebApp.Pages.Quiz.YourQuizModel
@{
    var accessToken = HttpContext.Session.GetString("accessToken");
    ViewData["Title"] = "Quizlet Lite – Your Quiz";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let currentPage = 1;
    let fullData = [];
    let searchString = '';
    let apiUrl = 'https://localhost:7245/api/Quiz/your-quiz';
    let itemsPerPage = 6;

    let url = apiUrl + '?page=' + currentPage + '&pageSize=' + itemsPerPage;
        if (searchString) {
            url += '&name=' + searchString;
        }

        async function loadQuizzes() {
        let url = apiUrl + '?page=' + currentPage + '&pageSize=' + itemsPerPage;
        if (searchString) url += '&name=' + encodeURIComponent(searchString);

        const token = "@Html.Raw(accessToken ?? "")";

        try {
            const res = await fetch(url, {
                headers: {
                    "Content-Type": "application/json",
                    Authorization: "Bearer " + token
                }
            });

                switch (res.status) {
        case 401:
            window.location.href = "/Auth/Login"; break;
        case 403: // bạn có thể xử lý riêng nếu cần
            window.location.href = "/"; break;
        case 400:
            Swal.fire({ icon: "warning", title: "Bad Request", text: "Token format is invalid." });
            break;
        case 404:
            Swal.fire({ icon: "info", title: "No Quizzes Found", text: "You have not created any quiz yet." });
            break;
        case 500:
            Swal.fire({ icon: "error", title: "Server Error", text: "There was a system error. Please try again later." });
            window.location.href = "/Error";
            break;
        case 200:
            break;
        default:
            Swal.fire({ icon: "question", title: "Unknown Error", text: `Status: ${res.status}` });
            break;
    }

            const quizzes = await res.json();
                if (!Array.isArray(quizzes) || quizzes.length === 0) {
        if (currentPage === 1) {
            const container = document.getElementById("yourQuizListContainer");
            container.innerHTML = `
                <div class="col-12 text-center py-5">
                    <div class="d-flex flex-column align-items-center text-muted">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-journal-x mb-3" viewBox="0 0 16 16">
                            <path d="M6.146 8.146a.5.5 0 0 1 .708 0L8 9.293l1.146-1.147a.5.5 0 0 1 .708.708L8.707 10l1.147 1.146a.5.5 0 0 1-.708.708L8 10.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 10 6.146 8.854a.5.5 0 0 1 0-.708z"/>
                            <path d="M3 0h10a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.832.374L12.5 14H3a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zm0 1a1 1 0 0 0-1 1v10a2 2 0 0 1 2 2h9v-1.5a.5.5 0 0 1 .832-.374L14 13.118V2a1 1 0 0 0-1-1H3z"/>
                        </svg>
                        <h5 class="mb-1">No Quizzes Found</h5>
                        <p class="mb-3">Looks like you haven’t created any quizzes yet.</p>
                    </div>
                </div>
            `;
        }
        return;
    }

            const container = document.getElementById("yourQuizListContainer");
            if (currentPage === 1) container.innerHTML = ""; // Nếu là trang đầu, clear trước

            quizzes.forEach(quiz => {
                const html = `
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">${quiz.name}</h5>
                                <p class="card-text text-muted">Created on ${new Date(quiz.createdOn).toLocaleDateString()}</p>
                                <div class="mt-auto">
                                    <a href="/Quiz/Details?id=${quiz.id}" class="btn btn-outline-primary me-2">🔍 View</a>
                                    <a href="/Quiz/Edit?id=${quiz.id}" class="btn btn-outline-secondary me-2">✏️ Edit</a>
                                    <form method="post" action="/Quiz/Delete?id=${quiz.id}" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger">🗑 Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>`;
                container.innerHTML += html;
            });

        } catch (err) {
            console.error("Quiz fetch error:", err.message);
        }
    }

    // 👉 Tải lần đầu khi trang vào
    // 👉 Gắn listener sau khi DOM đã sẵn sàng
    document.addEventListener("DOMContentLoaded", () => {
        document.getElementById("loadMoreBtn").addEventListener("click", () => {
            currentPage++;
            loadQuizzes();
        });

        document.getElementById("searchInput").addEventListener("input", () => {
            currentPage = 1;
            searchString = document.getElementById("searchInput").value.trim();
            loadQuizzes();
        });

        // Tải lần đầu
        loadQuizzes();
    });


</script>

<div class="py-5 text-center">
    <h2 class="text-primary mb-4">📝 Your Quizzes</h2>
    <form class="mb-4 d-flex" method="get">
        <input type="text" id="searchInput" name="search" class="form-control me-2" placeholder="🔍 Search your quizzes..." value="" />
    </form>
    <a href="/Quiz/Create" class="btn btn-outline-primary mb-3">✏️ Create One Now</a>
    <div class="row" id="yourQuizListContainer">
        
    </div>
    <button class="btn btn-primary" id="loadMoreBtn">Load more</button>
</div>