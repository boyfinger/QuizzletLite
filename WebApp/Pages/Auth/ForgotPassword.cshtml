@page
@model WebApp.Pages.Auth.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="min-width: 350px; max-width: 400px; width: 100%;">
        <div class="card-header text-center bg-white border-0">
            <h4 class="mb-0 text-primary">Reset Your Password</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="SendResetLink">
                <div class="form-group mb-3">
                    <label asp-for="forgotPasswordDTO.Username" class="form-label text-muted">Username</label>
                    <input asp-for="forgotPasswordDTO.Username" class="form-control" placeholder="Enter your username" required />
                    <span asp-validation-for="forgotPasswordDTO.Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="forgotPasswordDTO.Email" class="form-label text-muted">Email address</label>
                    <input asp-for="forgotPasswordDTO.Email" class="form-control" placeholder="Enter your email" required />
                    <span asp-validation-for="forgotPasswordDTO.Email" class="text-danger"></span>
                    <small class="form-text text-muted">We'll send you instructions to reset your password.</small>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </form>
        </div>
        <div class="card-footer text-center bg-white border-0">
            <small class="text-muted">Remembered your password? <a asp-page="/Login">Go back to Login</a></small>
        </div>
    </div>
</div>